

@using Projecore.Models
@model List<Firma>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0"
  width="100%">
    <thead>
    <tr>
        <th>ID</th>
        <th>FirmaAdı</th>
        <th>MernisKontrol</th>
        <th>güncelle</th>
      
    </tr>
    </thead>
    <tbody>
    @foreach (var x in Model)
    {
       <tr>
       <td>@x.id </td>
       <td>@x.firma_adi</td>
       <td>@x.mernis_kontrol</td>
       <td><a href="/Firmalar/FirmaGetir/@x.id" class="btn-primary btn-danger">Güncelle</td>
      

       </tr>
    }
    </tbody>

</table>
<a href="/Firmalar/YeniFirma"  class="btn btn-primary">Yeni Firma</a>

